{
  "name": "keoda",
  "version": "1.0.0",
  "description": "Conlang by Lily Shagu",
  "repository": {
    "type": "git",
    "url": "https://github.com/lilybucher/keoda.git"
  },
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --port 1333 --mode production --hot --inline",
    "clean": "rimraf .cache public",
    "makedb": "ts-node src/conlang/index.ts",
    "makedb:watch": "npm run makedb && fswatch -r -o src/conlang | xargs -n1 -I{} npm run makedb",
    "prebuild": "npm run clean && npm run makedb",
    "build": "webpack --mode=production",
    "deploy": "git push origin `git subtree split --prefix public master`:gh-pages --force",
    "conjugation": "ts-node src/conjugation.ts"
  },
  "author": "Lily Bucher <hi@lilybucher.com> (http://lilybucher.com)",
  "license": "code is MIT, language is private",
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.5",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "git-revision-webpack-plugin": "^3.0.6",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.5",
    "mini-css-extract-plugin": "^1.3.3",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.12",
    "ts-node": "^8.4.1",
    "typed-react-markdown": "^0.1.0",
    "typescript": "^4.1.3",
    "webpack": "^5.10.1",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "overmind": "^26.0.0",
    "overmind-react": "^27.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^5.0.3",
    "styled-components": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add public && git add src/db.json"
    }
  }
}