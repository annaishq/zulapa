{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "rootDir": "src",
    "jsxFactory": "React.createElement",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "output",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "test": [
        "src/test"
      ]
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}